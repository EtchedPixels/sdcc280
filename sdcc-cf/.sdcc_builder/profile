# sdcc-builder profile

# hoat name without domain
export HOSTNAME=$(if test $(expr $(hostname) : '.*\.') != '0'; then expr $(hostname) : '\([^.]*\).'; else echo $(hostname); fi)

# this for svn
export EDITOR=vi

# perl library
export PERL5LIB=${HOME}/local-${HOSTNAME}/lib/perl5/site_perl/5.10.0

# shared libraries path
export LD_LIBRARY_PATH=${HOME}/local-${HOSTNAME}/lib

# path
export PATH=${HOME}/local-${HOSTNAME}/bin:${PATH}
