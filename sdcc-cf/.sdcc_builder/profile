# sdcc-builder profile

# hoat name without domain
HOSTNAME=$(if test $(expr $(hostname) : '.*\.') != '0'; then expr $(hostname) : '\([^.]*\).'; else echo $(hostname); fi)
export HOSTNAME

# this for svn
EDITOR=vi
export EDITOR

# perl library
PERL5LIB=${HOME}/local-${HOSTNAME}/lib/perl5/site_perl/5.10.0
export PERL5LIB

# shared libraries path
LD_LIBRARY_PATH=${HOME}/local-${HOSTNAME}/lib
export LD_LIBRARY_PATH

# path
PATH=${HOME}/local-${HOSTNAME}/bin:${PATH}
export PATH
